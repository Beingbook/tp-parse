{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "PORT": true,
    "DEV": true
  },
  "rules": {
    "quotes": [2, "single"],
    "curly": 2,
    "semi": [2, "always"],
    "new-cap": [
      2, {
        "capIsNewExceptions": ["Router"]
      }
    ],
    "generator-star-spacing": 0,
    "import/no-extraneous-dependencies": 0
  }
}
